(include dune.inc)

(rule
 (deps
  (glob_files *.bop))
 (action
  (with-stdout-to
   dune.inc.gen
   (pipe-stdout
    (bash
     "%{bin:bopkit} fmt gen-dune --exclude div.bop,div_opt.bop -- \%{bin:bopkit} fmt file")
    (run dune format-dune-file)))))

(rule
 (alias runtest)
 (action
  (diff dune.inc dune.inc.gen)))

(executables
 (names div div_opt)
 (flags -w +a-4-40-41-42-44-66 -warn-error +a -open Core)
 (libraries core graphics unix threads bopkit_block)
 (preprocess
  (pps
   ppx_compare
   ppx_enumerate
   ppx_hash
   ppx_here
   ppx_let
   ppx_sexp_conv
   ppx_sexp_value
   ppx_js_style
   -check-doc-comments)))

(rule
 (target div.txt)
 (deps
  (package bopkit)
  div.exe)
 (mode promote)
 (action
  (with-stdout-to
   %{target}
   (run %{bin:bopkit} simu %{dep:generate.bop} -num-counter-cycles 1 -o))))

(rule
 (target div_opt.txt)
 (mode promote)
 (action
  (with-stdout-to
   %{target}
   (bash "%{bin:bopkit} counter -ni -c 256 -N 8 | ./%{dep:div_opt.exe} -N 4"))))

(rule
 (target div.bop)
 (deps div.txt)
 (mode promote)
 (action
  (with-stdout-to
   %{target}
   (run %{bin:bopkit} bdd synthesize -block-name Div -AD 8 -WL 4 -f %{deps}))))

(rule
 (target div_opt.bop)
 (deps div_opt.txt)
 (mode promote)
 (action
  (with-stdout-to
   %{target}
   (run
    %{bin:bopkit}
    bdd
    synthesize
    -block-name
    Div_opt
    -AD
    8
    -WL
    4
    -f
    %{deps}))))

(rule
 (target div_check.output.corrected)
 (alias runtest)
 (deps
  (package bopkit)
  (glob_files *.bop)
  (glob_files *.txt)
  div.exe)
 (action
  (with-stdout-to
   %{target}
   (run %{bin:bopkit} simu %{dep:div_check.bop} -num-counter-cycles 1))))

(rule
 (alias runtest)
 (action
  (diff div_check.output div_check.output.corrected)))

(cram
 (deps
  (package bopkit)
  div.exe
  div_opt.exe
  (glob_files *.bop)
  (glob_files *.txt)))

(mdx
 (deps
  (package bopkit)
  div.exe
  div_opt.exe
  (glob_files *.bop)
  (glob_files *.txt)))
