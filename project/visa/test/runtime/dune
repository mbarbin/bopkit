(include dune.inc)

(rule
 (target dune.inc)
 (deps
  (glob_files *.asm))
 (alias runtest)
 (mode promote)
 (action
  (with-stdout-to
   %{target}
   (pipe-stdout
    (run %{bin:visa} fmt gen-dune "\%{bin:visa}" fmt file)
    (run dune format-dune-file)))))

(rule
 (copy ../../circuit/visa.bop visa.bop))

(cram
 (package bopkit-tests)
 (deps
  (package bopkit)
  %{bin:visa}
  (glob_files *.txt)
  (glob_files *.asm)
  (glob_files *.bin)
  (glob_files *.bop)))

(mdx
 (package bopkit-dev)
 (deps
  (package bopkit)
  %{bin:visa}
  get_date.exe
  (glob_files *.txt)
  (glob_files *.asm)
  (glob_files *.bin)
  (glob_files *.bop)))
