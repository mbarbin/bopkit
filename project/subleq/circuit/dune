(rule
 (alias subleq-simulation)
 (deps
  (package bopkit)
  (package subleq)
  (glob_files *.bop)
  (glob_files *.exe)
  (glob_files test/*.input))
 (action
  (run %{bin:bopkit} simu %{dep:main.bop} --parameter 'WithPulse=1')))

(cram
 (package bopkit-tests)
 (deps
  (package bopkit)
  (package subleq)
  (glob_files *.bop)
  (glob_files *.exe)
  (glob_files test/*.input)
  (glob_files test/*.output)
  (glob_files test/*.sh)))

(include dune.inc)

(rule
 (target dune.inc.raw)
 (deps
  (glob_files *.bop))
 (action
  (with-stdout-to
   %{target}
   (run %{bin:bopkit} fmt gen-dune "\%{bin:bopkit}" fmt file))))

(rule
 (alias runtest)
 (mode promote)
 (action
  (format-dune-file dune.inc.raw dune.inc)))
