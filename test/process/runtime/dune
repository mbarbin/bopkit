(include dune.inc)

(rule
 (target dune.inc.gen)
 (deps
  (glob_files *.bpp))
 (action
  (with-stdout-to
   %{target}
   (pipe-stdout
    (bash
     "%{bin:bopkit} process fmt gen-dune -- \%{bin:bopkit} process fmt file")
    (run dune format-dune-file)))))

(rule
 (alias runtest)
 (action
  (diff dune.inc dune.inc.gen)))

(cram
 (deps
  (package bopkit)
  %{bin:bopkit}
  (glob_files *.bpp)))
