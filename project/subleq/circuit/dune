(executables
 (names controller disk_interface subleq_ram)
 (flags -w +a-4-40-42-44-66 -warn-error +a -open Core)
 (libraries
  core
  bopkit_block
  bopkit_sleeper
  graphics
  bopkit_memory
  unix
  threads)
 (preprocess
  (pps
   ppx_compare
   ppx_enumerate
   ppx_hash
   ppx_here
   ppx_let
   ppx_sexp_conv
   ppx_sexp_value
   ppx_js_style
   -check-doc-comments)))

(rule
 (alias subleq-simulation)
 (deps
  (package bopkit)
  (glob_files *.bop)
  (glob_files *.exe)
  (glob_files test/*.input))
 (action
  (run %{bin:bopkit} simu %{dep:main.bop} -parameter 'WithPulse=1')))

(cram
 (deps
  (package bopkit)
  (glob_files *.bop)
  (glob_files *.exe)
  (glob_files test/*.input)
  (glob_files test/*.output)
  (glob_files test/*.sh)))

(include dune.inc)

(rule
 (target dune.inc)
 (deps
  (glob_files *.bop))
 (alias runtest)
 (mode promote)
 (action
  (with-stdout-to
   %{target}
   (pipe-stdout
    (run %{bin:bopkit} fmt gen-dune -- "\%{bin:bopkit}" fmt file)
    (run dune format-dune-file)))))
