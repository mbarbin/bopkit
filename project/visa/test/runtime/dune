(include dune.inc)

(rule
 (target dune.inc.gen)
 (deps
  (glob_files *.asm))
 (action
  (with-stdout-to
   %{target}
   (pipe-stdout
    (bash "%{bin:visa} fmt gen-dune -- \%{bin:visa} fmt file")
    (run dune format-dune-file)))))

(rule
 (alias runtest)
 (action
  (diff dune.inc dune.inc.gen)))

(rule
 (copy ../../circuit/visa.bop visa.bop))

(cram
 (deps
  (package bopkit)
  (glob_files *.txt)
  (glob_files *.asm)
  (glob_files *.bin)
  (glob_files *.bop)))

(mdx
 (deps
  (package bopkit)
  get_date.exe
  (glob_files *.txt)
  (glob_files *.asm)
  (glob_files *.bin)
  (glob_files *.bop)))
