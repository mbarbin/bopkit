(include dune.inc)

(rule
 (target dune.inc.gen)
 (deps
  (glob_files *.asm))
 (action
  (with-stdout-to
   %{target}
   (pipe-stdout
    (bash "%{bin:visa} fmt gen-dune -- \%{bin:visa} fmt file")
    (run dune format-dune-file)))))

(rule
 (alias runtest)
 (action
  (diff dune.inc dune.inc.gen)))

(cram
 (deps
  (package bopkit)
  %{bin:visa}
  (glob_files *.asm)))
